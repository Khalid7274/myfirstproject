pipeline {
    agent any

stages {
        stage('Build') {
            steps {
                echo 'Building the code ...'
		bat 'mvn clean'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing the code..'
		bat 'mvn test'
            }
        }
        stage('compile the code') {
            steps {
                echo 'compiling the code ...'
		bat 'mvn compile'
            }
        }
	stage('deploy') {
            steps {
                echo 'deploy the code ...'
		bat 'mvn deploy'
            }
        }
    }
}
